<li class='list'>
  <%= link_to product_path(products.id) do %>
    <div class='item-img-content'>
      <%= image_tag products.image, class: "item-img" %>
         
         
          <% unless products.purchaser %>

          <% else products.purchaser.id %>
            <div class='sold-out'>
              <span>Sold Out!!</span>
            </div> 
          <% end %>
          

    </div>
    <div class='item-info'>
      <h3 class='item-name'>
        <%= products.name %>
      </h3>
       <div class='item-price'>
          <span><%= products.price %>円<br>(税込み)</span>
            <div class='star-btn'>
               <%= image_tag "star.png", class:"star-icon" %>
               <span class='star-count'>0</span>
            </div>
        </div>
     </div>
  <% end %>
</li>